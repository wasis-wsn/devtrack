                                        "enum": [
                                            "bug",
                                            "improvement"
                                        ],
                                        "example": "bug"
                                    },
                                    "priority": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    },
                                    "assigned_to": {
